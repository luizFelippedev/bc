{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "description": "Portfolio Backend API - Sistema completo para gerenciamento de portfolio profissional",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --clear src/server.ts",
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js",
    "start:prod": "npm run build && npm run start",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "test:integration": "jest --config jest.integration.config.js --detectOpenHandles",
    "lint": "eslint src/**/*.ts --max-warnings 0",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js}\"",
    "typecheck": "tsc --noEmit",
    "migrate": "ts-node src/scripts/migrate.ts",
    "migrate:create": "ts-node src/scripts/create-migration.ts",
    "migrate:rollback": "ts-node src/scripts/rollback-migration.ts",
    "seed": "ts-node src/scripts/seed.ts",
    "init-admin": "ts-node src/scripts/initializeAdmin.ts",
    "docker:build": "docker build -t portfolio-backend .",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose up -d --build",
    "docker:down": "docker-compose down",
    "health-check": "curl -f http://localhost:5000/health || exit 1",
    "clean": "rimraf dist node_modules/.cache",
    "prepare": "husky install"
  },
  "keywords": [
    "portfolio",
    "backend",
    "api",
    "typescript",
    "nodejs",
    "mongodb",
    "redis",
    "express",
    "jwt",
    "socket.io"
  ],
  "author": {
    "name": "Portfolio Developer",
    "email": "dev@portfolio.com",
    "url": "https://portfolio.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/portfolio-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/portfolio-backend/issues"
  },
  "homepage": "https://github.com/your-username/portfolio-backend#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@types/xlsx": "^0.0.36",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.6.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.16.0",
    "mongoose": "^7.8.7",
    "multer": "^1.4.5-lts.1",
    "on-finished": "^2.4.1",
    "rate-limiter-flexible": "^7.1.1",
    "sharp": "^0.32.6",
    "slugify": "^1.6.6",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.22",
    "@types/express-rate-limit": "^6.0.2",
    "@types/express-session": "^1.18.1",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.17.50",
    "@types/nodemailer": "^6.4.17",
    "@types/on-finished": "^2.3.4",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.10",
    "supertest": "^6.3.4",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "optionalDependencies": {
    "@elastic/elasticsearch": "^9.0.2",
    "@google-cloud/storage": "^7.16.0",
    "aws-sdk": "^2.1692.0",
    "handlebars": "^4.7.8",
    "hpp": "^0.2.3",
    "json2csv": "^6.0.0-alpha.2",
    "node-cron": "^4.0.7",
    "nodemailer": "^7.0.3",
    "xlsx": "^0.18.5",
    "xss-clean": "^0.1.4"
  }
}
