{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "description": "Portfolio Backend API - Sistema completo para gerenciamento de portfolio profissional",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --clear src/index.ts",
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js",
    "start:prod": "npm run build && npm run start",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "test:integration": "jest --config jest.integration.config.js --detectOpenHandles",
    "lint": "eslint src/**/*.ts --max-warnings 0",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js}\"",
    "typecheck": "tsc --noEmit",
    "migrate": "ts-node src/scripts/migrate.ts",
    "migrate:create": "ts-node src/scripts/create-migration.ts",
    "migrate:rollback": "ts-node src/scripts/rollback-migration.ts",
    "seed": "ts-node src/scripts/seed.ts",
    "init-admin": "ts-node src/scripts/initializeAdmin.ts",
    "docker:build": "docker build -t portfolio-backend .",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose up -d --build",
    "docker:down": "docker-compose down",
    "health-check": "curl -f http://localhost:5000/health || exit 1",
    "clean": "rimraf dist node_modules/.cache",
    "prepare": "husky install"
  },
  "keywords": [
    "portfolio",
    "backend",
    "api",
    "typescript",
    "nodejs",
    "mongodb",
    "redis",
    "express",
    "jwt",
    "socket.io"
  ],
  "author": {
    "name": "Portfolio Developer",
    "email": "dev@portfolio.com",
    "url": "https://portfolio.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/portfolio-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/portfolio-backend/issues"
  },
  "homepage": "https://github.com/your-username/portfolio-backend#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "multer": "^1.4.5-lts.1",
    "on-finished": "^2.4.1",
    "rate-limiter-flexible": "^3.0.8",
    "sharp": "^0.32.6",
    "slugify": "^1.6.6",
    "socket.io": "^4.7.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.0",
    "@types/on-finished": "^2.3.4",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}