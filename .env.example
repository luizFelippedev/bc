# =================================== 
# PORTFOLIO BACKEND - CONFIGURAÇÕES
# ===================================

# Ambiente
NODE_ENV=development
PORT=5000

# Base URL
BASE_URL=http://localhost:5000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/portfolio_development

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=8h
JWT_REFRESH_SECRET=your-refresh-secret-change-this-too
JWT_REFRESH_EXPIRES_IN=7d

# Session
SESSION_SECRET=your-session-secret-change-this
SESSION_ENABLED=true
SESSION_MAX_AGE=86400000

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Uploads
UPLOAD_PATH=uploads
MAX_FILE_SIZE=52428800

# Logs
LOG_LEVEL=info

# Email (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@portfolio.com

# Admin padrão
ADMIN_EMAIL=admin@portfolio.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Administrador

# Cloud Storage (opcional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BACKUP_BUCKET=

GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_KEYFILE=
GOOGLE_CLOUD_BACKUP_BUCKET=

# Monitoramento
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=
