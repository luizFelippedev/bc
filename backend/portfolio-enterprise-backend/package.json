{
  "name": "portfolio-enterprise-backend",
  "version": "1.0.0",
  "description": "Portfolio Enterprise Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "migrate": "ts-node src/scripts/migrate.ts",
    "migrate:create": "ts-node src/scripts/create-migration.ts",
    "migrate:rollback": "ts-node src/scripts/rollback-migration.ts",
    "seed": "ts-node src/scripts/seed.ts",
    "docker:build": "docker build -t portfolio-backend .",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose up -d",
    "deploy": "bash scripts/deploy.sh",
    "health-check": "curl -f http://localhost:5000/health || exit 1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "typescript": "^5.1.6",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.6.7",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.40.0",
    "nodemailer": "^6.9.4",
    "joi": "^17.9.2",
    "winston": "^3.10.0",
    "rate-limiter-flexible": "^2.4.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "socket.io": "^4.7.2",
    "express-validator": "^7.0.1",
    "sharp": "^0.32.4",
    "handlebars": "^4.7.8",
    "uuid": "^9.0.0",
    "isomorphic-dompurify": "^2.3.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.9",
    "@types/cors": "^2.8.13",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/nodemailer": "^6.4.9",
    "@types/uuid": "^9.0.2",
    "@types/jest": "^29.5.3",
    "@types/supertest": "^2.0.12",
    "ts-node-dev": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "prettier": "^3.0.1",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "portfolio",
    "backend",
    "api",
    "typescript",
    "nodejs",
    "mongodb",
    "redis"
  ],
  "author": "Your Name",
  "license": "MIT"
}
